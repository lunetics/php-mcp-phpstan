{
    "name": "php-mcp/phpstan-server",
    "description": "Model Context Protocol (MCP) server for PHPStan static analysis",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "PHP-MCP Team"
        }
    ],
    "require": {
        "php": "^8.2",
        "php-mcp/server": "^1.0",
        "phpstan/phpstan": "^2.0",
        "symfony/process": "^6.0|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "PhpMcp\\PhpStan\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpMcp\\PhpStan\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/server.php"
    ],
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse --level=9 src/",
        "cs-fix": "php-cs-fixer fix --config=.php-cs-fixer.dist.php",
        "cs-check": "php-cs-fixer fix --config=.php-cs-fixer.dist.php --dry-run --diff"
    },
    "config": {
        "sort-packages": true,
        "prefer-stable": true
    },
    "minimum-stability": "stable"
}